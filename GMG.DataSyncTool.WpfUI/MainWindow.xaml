<Window x:Class="GMG.DataSyncTool.WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data Sync Tool" Height="300" Width="525">
    <Grid>
        <StackPanel>
            <GroupBox Header="Source Database" Margin="10,10,10,0">
                <StackPanel>
                    <TextBox Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Choose a database" VerticalAlignment="Top" IsReadOnly="True" />
                    <Button Content="Select Connection" HorizontalAlignment="Left" Height="23" Width="125" Margin="10,10,0,10"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Target Database" Margin="10,10,10,0">
                <StackPanel>
                    <TextBox Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Choose a database" VerticalAlignment="Top" IsReadOnly="True" />
                    <Button Content="Select Connection" HorizontalAlignment="Left" Height="23" Width="125" Margin="10,10,0,10"/>
                </StackPanel>
            </GroupBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Generate" Margin="10" VerticalAlignment="Top" Width="75"/>
                <Button Content="Close" Margin="10" VerticalAlignment="Top" Width="75"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
